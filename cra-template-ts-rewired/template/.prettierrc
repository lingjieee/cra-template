{
  "printWidth": 120,
  "tabWidth": 2,
  "parser": "babel",
  "trailingComma": "all",
  "jsxBracketSameLine": true,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.json", ".eslintrc", ".tslintrc", ".prettierrc", ".tern-project"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.{css,sass,scss,less}",
      "options": {
        "parser": "css"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
